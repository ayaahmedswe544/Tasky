@model IEnumerable<Tasky.Models.TaskItem>
@{
    Layout = "_NewLayout";
}

<div class="dashboard-container">
    <div class="container py-5">
        <h1 class="text-center mb-5 fw-bold">Hello, @ViewBag.FullName</h1>
        <div class="row g-4 mb-5">
            <div class="col-md-3">
                <a href="@Url.Action("Index", "Tasks")" class="stat-card text-decoration-none">
                    <div class="card glass-card text-center p-4 shadow-sm">
                        <h2 class="fw-bold text-primary">@ViewBag.TotalTasks</h2>
                        <p class="text-muted">Total Tasks</p>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a href="@Url.Action("Index", "Tasks", new { overdue = true })" class="stat-card text-decoration-none">
                    <div class="card glass-card text-center p-4 shadow-sm">
                        <h2 class="fw-bold text-danger">@ViewBag.OverdueTasks</h2>
                        <p class="text-muted">Overdue</p>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a href="@Url.Action("Index", "Tasks", new { priority = "High" })" class="stat-card text-decoration-none">
                    <div class="card glass-card text-center p-4 shadow-sm">
                        <h2 class="fw-bold text-warning">@ViewBag.HighPriority</h2>
                        <p class="text-muted">High Priority</p>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a href="@Url.Action("Index", "Tasks", new { today = true })" class="stat-card text-decoration-none">
                    <div class="card glass-card text-center p-4 shadow-sm">
                        <h2 class="fw-bold text-success">@ViewBag.TodayTasks</h2>
                        <p class="text-muted">Today’s Tasks</p>
                    </div>
                </a>
            </div>
        </div>

