@model Tasky.VMS.HomeVM
@{
    Layout = "_NewLayout";
}

<div class="dashboard-container">
    <div class="container py-3">

        <div style="flex-wrap:wrap;">
<img src="@(string.IsNullOrWhiteSpace(ViewBag.Photo)? "/imgs/default-profile.png": ViewBag.Photo)"
     class="rounded-circle shadow-sm"
     style="width:200px; height:200px; object-fit:cover; margin-bottom:-40px;" />



            <h1 class="text-center fw-bold" style="margin-top:-60px;margin-left:-50px;color:#1d496f;">Hello, @ViewBag.FullName</h1>
        </div>
        <div class="container mt-5">

            <div class=" mt-3 p-4 fs-5">
                <i class="bi bi-quote" style="color:#367bb7;">@ViewBag.Quote</i>
            </div>
        </div>
        <div class="row g-4 mb-5">
            <div class="col-md-3">
                <a href="@Url.Action("Index", "Tasks")" class="stat-card text-decoration-none">
                    <div class="card glass-card text-center p-4 shadow-sm">
                        <h2 class="fw-bold " style="color:#1d496f;">@Model.TotalTasks</h2>
                        <p class="text-muted">Total Tasks</p>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a href="@Url.Action("Index", "Tasks", new { overdue = true })" class="stat-card text-decoration-none">
                    <div class="card glass-card text-center p-4 shadow-sm">
                        <h2 class="fw-bold " style="color:#367bb7;">@Model.OverdueTasks</h2>
                        <p class="text-muted">Overdue</p>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a href="@Url.Action("Index", "Tasks", new { priority = "High" })" class="stat-card text-decoration-none">
                    <div class="card glass-card text-center p-4 shadow-sm">
                        <h2 class="fw-bold " style="color:#4ba9fa;">@Model.HighPriority</h2>
                        <p class="text-muted">High Priority</p>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a href="@Url.Action("Index", "Tasks", new { today = true })" class="stat-card text-decoration-none">
                    <div class="card glass-card text-center p-4 shadow-sm">
                        <h2 class="fw-bold " style="color:#1d496f;">@Model.todayTasks</h2>
                        <p class="text-muted">Today’s Tasks</p>
                    </div>
                </a>
            </div>
        </div>

        <h3 class="fw-semibold mb-4" style="color:#1d496f;">Recent Tasks</h3>
         <div class="row g-4"> 
             @foreach (var task in Model.RecentTask) 
             { 
                 <div class="col-md-4"> 
                     <div class="card task-card h-100"> 
                         <div class="card-body"> 
                             <h5 class="fw-bold">@task.Title</h5> 
                             <p class="text-muted mb-2">@task.Description</p> 
                             <small class="text-secondary">Due: @task.DueDate.ToShortDateString()</small> 
                             <br />
                            <span class="badge @(task.Priority == PriorityLevel.High ? "priority-high" : task.Priority == PriorityLevel.Medium ? "priority-medium" : "priority-low")">
                                @task.Priority 
                             </span> 
                         </div> 
                         <div class="card-footer bg-transparent border-0 d-flex justify-content-between"> 
                             <a asp-controller="Tasks" asp-action="Edit" asp-route-id="@task.Id" class="btn priority-medium btn-sm">Edit</a> 
                             <a asp-controller="Tasks" asp-action="Delete" asp-route-id="@task.Id" class="btn priority-high btn-sm">Delete</a> 
                         </div> 
                     </div> 
                 </div>
             } 
         </div> 
    </div>
</div>

<style>
    .dashboard-container {
        background: linear-gradient(135deg, #e9f3ff 0%, #f7fbff 100%);
        min-height: 100vh;
        padding-top: 3rem;
        padding-bottom: 3rem;
    }

    .glass-card {
        backdrop-filter: blur(12px);
        background: rgba(255, 255, 255, 0.7);
        border: 1px solid rgba(255, 255, 255, 0.4);
        border-radius: 16px;
        transition: all 0.25s ease;
    }

        .glass-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        }

    .task-card {
        border-radius: 14px;
        border: none;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        transition: transform 0.2s ease;
    }

        .task-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        }

    .stat-card h2 {
        font-size: 2rem;
    }

    .stat-card p {
        margin-top: 0.5rem;
        font-weight: 500;
    }

    .priority-high {
        background-color: #1d496f;
        color: white;
    }

    .priority-medium {
        background-color: #367bb7;
        color: white;
    }

    .priority-low {
        background-color: #4ba9fa;
        color: white;
    }
</style>
