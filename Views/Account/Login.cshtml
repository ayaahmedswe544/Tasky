@model Tasky.VMS.Account.LoginVM
@{
    Layout = "_NewLayout";
}

<div class="page-background no-container login-page">
    <div class="register-box">
        <h2>Welcome Back</h2>
        <form asp-action="Login" method="post" novalidate>
            <div asp-validation-summary="All" style="color:red;">
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group text-left">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
                </div>
            </div>

            <button type="submit" class="btn btn-theme btn-block">Log In</button>
            </div>
        </form>


        <p class="mt-3 text-center">
            Don’t have an account?
            <a asp-controller="Account" asp-action="Register" class="login-link">Create one</a>
        </p>
    </div>
</div>

<style>
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow-x: hidden;
        font-family: 'Segoe UI', sans-serif;
    }

    .page-background {
        position: relative;
        width: 100vw;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-image: url('/imgs/bg1.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;
        background-color: #f8f9fa;
    }

    .register-box {
        background: rgba(255, 255, 255, 0.95);
        padding: 40px 30px;
        border-radius: 16px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.2);
        width: 400px;
        max-width: 90%;
        text-align: center;
    }

        .register-box h2 {
            color: #2c3e50;
            margin-bottom: 30px;
        }

    .btn-theme {
        background-color: #acd4f7;
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 12px;
        font-size: 1rem;
        width: 100%;
        transition: 0.3s ease;
    }

        .btn-theme:hover {
            background-color: #8fc9f2;
            color: #fff;
        }

    .login-link {
        color: #007bff;
        text-decoration: none;
    }

        .login-link:hover {
            text-decoration: underline;
        }

    .form-check-label {
        font-size: 0.9rem;
        color: #2c3e50;
    }

    .form-check-input {
        margin-right: 6px;
    }
</style>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
