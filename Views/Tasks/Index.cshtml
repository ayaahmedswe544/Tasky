@model Tasky.VMS.TaskVMs.TaskListVM
@using Tasky.Models

@{
    ViewData["Title"] = "Tasks Dashboard";
    Layout = "_NewLayout";
}

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">@(ViewBag.Name) Tasks</h2>
        <a asp-action="Create" class="btn btn-primary-glow px-4 rounded-pill fw-semibold shadow-sm" style="background:black;">
            <i class="bi bi-plus-circle me-2"></i>New Task
        </a>
    </div>

    <form method="get" class="mb-4">
        <div class="row g-3 align-items-center">

            <div class="col-md-3 d-flex align-items-center">
                <label class="me-2 fw-semibold mb-0">Search:</label>
                <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control rounded-pill px-3 py-2" placeholder="Search tasks..." />
            </div>

            <div class="col-md-3 d-flex align-items-center">
                <label class="me-2 fw-semibold mb-0">Category:</label>
                <select name="CategoryId" class="form-select rounded-pill px-3 py-2">
                    <option value="">All</option>
                    @foreach (var cat in ViewBag.Categories)
                    {
                        if (Model.CategoryId == cat.Id)
                        {
                            <option value="@cat.Id" selected="selected">@cat.Name</option>
                        }
                        else
                        {
                            <option value="@cat.Id">@cat.Name</option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-2 d-flex align-items-center">
                <label class="me-2 fw-semibold mb-0">Priority:</label>
                <select name="Priority" class="form-select rounded-pill px-3 py-2">
                    <option value="">All</option>
                    @foreach (var priority in Enum.GetValues(typeof(PriorityLevel)))
                    {
                        if (Model.Priority == (PriorityLevel)priority)
                        {
                            <option value="@priority" selected="selected">@priority</option>
                        }
                        else
                        {
                            <option value="@priority">@priority</option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-2 d-flex align-items-center">
                <label class="me-2 fw-semibold mb-0">Sort:</label>
                <select name="sortOrder" class="form-select rounded-pill px-3 py-2">
                    @if (Model.SortOrder == "asc")
                    {
                        <option value="desc">Newest First</option>
                        <option value="asc" selected="selected">Oldest First</option>
                    }
                    else
                    {
                        <option value="desc" selected="selected">Newest First</option>
                        <option value="asc">Oldest First</option>
                    }
                </select>
            </div>

            <div class="col-md-2 text-end">
                <button type="submit" class="btn btn-primary rounded-pill px-4 py-2">
                    <i class="bi bi-funnel me-1"></i>Filter
                </button>
            </div>
        </div>
    </form>

    <div class="table-responsive shadow-sm rounded-4 overflow-hidden">
        <table class="table align-middle mb-0 table-hover">
            <thead class="table-header">
                <tr>
                    <th style="width: 40px;"></th>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Priority</th>
                    <th>Created</th>
                    <th>Due</th>
                    <th>Status</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Tasks != null && Model.Tasks.Any())
                {
                    foreach (var task in Model.Tasks)
                    {
                        var collapseId = $"collapseTask_{task.Id}";
                        <tr>
                            <td class="text-center">
                                <i class="bi bi-caret-right-fill rotate-icon"
                                   role="button"
                                   data-bs-toggle="collapse"
                                   data-bs-target="#@collapseId"
                                   aria-expanded="false"
                                   aria-controls="@collapseId"></i>
                            </td>
                            <td>@task.Title</td>
                            <td>@task.Category?.Name</td>
                            <td>
                                <span class="badge
                                    @(task.Priority == PriorityLevel.High ? "bg-danger" :
                                      task.Priority == PriorityLevel.Medium ? "bg-warning text-dark" : "bg-success")">
                                    @task.Priority
                                </span>
                            </td>
                            <td>@task.CreatedAt.ToShortDateString()</td>
                            <td>@task.DueDate.ToShortDateString()</td>
                            <td>
                                @if (task.IsCompleted)
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                                else if (task.DueDate < DateTime.Now)
                                {
                                    <span class="badge bg-danger">Overdue</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pending</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@task.Id"
                                   class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('Are you sure you want to delete this task?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>

                        <tr class="collapse bg-light border-bottom" id="@collapseId">
                            <td colspan="8" class="p-4">
                                <div class="rounded-3 border p-3 bg-white shadow-sm">
                                    <p class="mb-2"><strong>Description:</strong></p>
                                    <p class="text-muted">@task.Description</p>
                                    <div class="small text-muted">
                                        <strong>Created:</strong> @task.CreatedAt.ToString("f") |
                                        <strong>Due:</strong> @task.DueDate.ToString("f")
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">No tasks found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.TotalTasks > Model.PageSize)
    {
        var totalPages = (int)Math.Ceiling((double)Model.TotalTasks / Model.PageSize);
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-pageNumber="@i"
                           asp-route-CategoryId="@Model.CategoryId"
                           asp-route-Priority="@Model.Priority"
                           asp-route-SearchTerm="@Model.SearchTerm"
                           asp-route-SortOrder="@Model.SortOrder">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.rotate-icon').forEach(icon => {
            icon.addEventListener('click', function () {
                const target = document.querySelector(this.dataset.bsTarget);
                this.classList.toggle('rotated');
                const collapseEl = new bootstrap.Collapse(target, { toggle: true });
            });
        });
    </script>
}

<style>
    body {
        background: linear-gradient(135deg, #e9f3ff 0%, #f7fbff 100%);
        min-height: 100vh;
    }

    .btn-primary-glow {
        background: linear-gradient(135deg, #007bff, #4dc0ff);
        color: white;
        border: none;
        box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
        transition: all 0.3s ease;
    }

        .btn-primary-glow:hover {
            box-shadow: 0 6px 20px rgba(0, 123, 255, 0.5);
            transform: translateY(-2px);
        }

    .rotate-icon {
        transition: transform 0.25s ease;
        color: #007bff;
    }

        .rotate-icon.rotated {
            transform: rotate(90deg);
        }

    .table-header {
        background-color: #acd4f7;
        color: #fff;
        border-bottom: 2px solid #007bff;
    }

        .table-header th {
            font-weight: 600;
            letter-spacing: 0.4px;
            border-bottom: none !important;
        }

    .table-hover tbody tr:hover {
        background-color: #f0f8ff;
    }

    .rounded-4 {
        border-radius: 1rem;
    }

    .form-control, .form-select {
        border: 1px solid #d6e4f0;
        transition: border-color 0.2s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.15rem rgba(0, 123, 255, 0.25);
        }

  /*pagination*/
    .page-link {
        color: #007bff;
    }

    .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
    }
</style>
