@model Tasky.VMS.TaskVMs.TaskListVM
@using Tasky.Models

@{
    ViewData["Title"] = "Tasks Dashboard";
    Layout = "_NewLayout";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold  mb-0" style="color:#1d496f;">@(ViewBag.FullName)'s Tasks</h2>
        <a asp-action="Create" class="btn px-4 rounded-pill fw-semibold shadow-sm" style="background-color:#1d496f;color:white;">
            <i class="bi bi-plus-circle me-2"></i> New Task
        </a>
    </div>

    <form method="get" class="mb-4" asp-action="index" asp-controller="tasks">
        <div class="row g-3 align-items-center">

            <div class="col-md-3 d-flex align-items-center">
                <label class="me-2 fw-semibold mb-0">Search:</label>
                <input type="text" name="searchTerm" onchange="this.form.submit()" value="@Model.SearchTerm" class="form-control rounded-pill px-3 py-2" placeholder="Search tasks..." />
            </div>

            <div class="col-md-3 d-flex align-items-center" style="margin-left:-20px;">
                <label class="me-2 fw-semibold mb-0">Category:</label>
                <select name="CategoryId" onchange="this.form.submit()" class="form-select rounded-pill px-1 py-2">
                    <option value="">All</option>
                    @foreach (var cat in ViewBag.Categories)
                    {
                        if (Model.CategoryId == cat.Id)
                        {
                            <option value="@cat.Id" selected="selected">@cat.Name</option>
                        }
                        else
                        {
                            <option value="@cat.Id">@cat.Name</option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-2 d-flex align-items-center" style="margin-left:-50px;">
                <label class="me-2 fw-semibold mb-0">Priority:</label>
                <select name="Priority" onchange="this.form.submit()" class="form-select rounded-pill px-3 py-2">
                    <option value="">All</option>
                    @foreach (var priority in Enum.GetValues(typeof(PriorityLevel)))
                    {
                        if (Model.Priority == (PriorityLevel)priority)
                        {
                            <option value="@priority" selected="selected">@priority</option>
                        }
                        else
                        {
                            <option value="@priority">@priority</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-center">
                <label class="me-2 fw-semibold mb-0">Sort:</label>
                <select name="sortOrder" onchange="this.form.submit()" class="form-select rounded-pill px-3 py-2">
                    @if (Model.SortOrder == "asc")
                    {
                        <option value="desc">Farst</option>
                        <option value="asc" selected="selected">Nearest</option>
                    }
                    else
                    {
                        <option value="desc" selected="selected">Farst</option>
                        <option value="asc">Nearest</option>
                    }
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-center" style="margin-left:-25px;">
                <label class="me-2 fw-semibold mb-0">Overdue:</label>
                <input asp-for="Overdue" onchange="this.form.submit()" type="checkbox" />
            </div>

            <div class="col-md-2 d-flex align-items-center" style="margin-left:-110px;">
                <label class="me-2 fw-semibold mb-0" onchange="t">Completed:</label>
                <input asp-for="Comp" onchange="this.form.submit()" type="checkbox" />
            </div>
        </div>
    </form>

    <div class="table-responsive shadow-sm rounded-4 overflow-hidden">
        <table class="table align-middle mb-0 table-hover">
            <thead class="table-header">
                <tr>
                    <th style="width: 40px;"></th>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Priority</th>
                    <th>Created</th>
                    <th>Due</th>
                    <th>Status</th>
                    <th  style="width:150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Tasks != null && Model.Tasks.Any())
                {
                    foreach (var task in Model.Tasks)
                    {
                        var collapseId = $"collapseTask_{task.Id}";
                        <tr data-due="@task.DueDate.ToString("yyyy-MM-dd")">

                            <td class="text-center">
                                <i class="bi bi-caret-right-fill rotate-icon"
                                   role="button"
                                   style="color:#1d496f;"
                                   data-bs-toggle="collapse"
                                   data-bs-target="#@collapseId"
                                   aria-expanded="false"
                                   aria-controls="@collapseId"></i>
                            </td>
                            <td>@task.Title</td>
                            <td>@task.Category?.Name</td>
                            <td>
                                <span class="badge
                                    @(task.Priority == PriorityLevel.High ? "priority-high" :
                                      task.Priority == PriorityLevel.Medium ? "priority-medium" : "priority-low")">
                                    @task.Priority
                                </span>
                            </td>
                            <td>@task.CreatedAt.ToShortDateString()</td>
                            <td>@task.DueDate.ToShortDateString()</td>
                            <td>
                                @if (task.IsCompleted)
                                {
                                    <span class="badge " style="background-color:#367bb7;">Completed</span>
                                }
                                else if (task.DueDate < DateTime.Now)
                                {
                                    <span class="badge " style="background-color:#1d496f;">Overdue</span>
                                }
                                else
                                {
                                    <span class="badge" style=" background-color:#4ba9fa;">Pending</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center align-items-center gap-2 flex-nowrap">

                                    <input type="checkbox"
                                           
                                           class="btn btn-sm  form-check-input task-checkbox"
                                           style="margin-left:-95px;color:black; height:25px;width:25px;"
                                           data-id="@task.Id"
                                    @(task.IsCompleted ? "checked" : "")
                                           onchange="toggleCompleted(this)" />

                                    <a asp-action="Edit" asp-route-id="@task.Id"
                                       class="btn btn-sm  ">
                                        <i class="bi bi-pencil" style="color:#1d496f"></i>
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@task.Id"
                                       class="btn btn-sm "
                                       onclick="return confirm('Are you sure you want to delete this task?');">
                                        <i class="bi bi-trash" style="color:#1d496f"></i>
                                    </a>

                                </div>
                            </td>


                        </tr>

                        <tr class="collapse bg-light border-bottom" id="@collapseId">
                            <td colspan="8" class="p-4">
                                <div class="rounded-3 border p-3 bg-white shadow-sm">
                                    <p class="mb-2"><strong style="color:#1d496f;">Description:</strong></p>
									<p class="text-muted" style="color:#367bb7;">@task.Description</p>
                                    <div class="small text-muted">
                                        <strong style="color:#1d496f;">Created:</strong style="color:#367bb7;"> @task.CreatedAt.ToString("f") |
                                        <strong style="color:#1d496f;">Due:</strong style="color:#367bb7;"> @task.DueDate.ToString("f")
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">No tasks found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.TotalTasks > Model.PageSize)
    {
        var totalPages = (int)Math.Ceiling((double)Model.TotalTasks / Model.PageSize);
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-pageNumber="@i"
                           asp-route-overdue=@Model.Overdue
                           asp-route-comp=@Model.Comp
                           asp-route-CategoryId="@Model.CategoryId"
                           asp-route-Priority="@Model.Priority"
                           asp-route-SearchTerm="@Model.SearchTerm"
                           asp-route-SortOrder="@Model.SortOrder">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.rotate-icon').forEach(icon => {
            icon.addEventListener('click', function () {
                const target = document.querySelector(this.dataset.bsTarget);
                this.classList.toggle('rotated');
                const collapseEl = new bootstrap.Collapse(target, { toggle: true });
            });
        });
        
    function toggleCompleted(checkbox) {
        const id = $(checkbox).data("id");
        const completed = checkbox.checked;

        $.ajax({
            url: '/Tasks/ToggleCompleted',
            type: 'POST',
            data: { id: id, completed: completed },
            success: function () {
            const row = $(checkbox).closest('tr');
            const statusCell = row.find('td').eq(6);
            const dueDate = new Date(row.data('due'));
            const now = new Date();

            if (completed) {
                        statusCell.html('<span class="badge"  style="background-color:#367bb7;">Completed</span>');
            } else if (dueDate < now) {
                        statusCell.html('<span class="badge "style="background-color:#1d496f;">Overdue</span>');
            } else {
                        statusCell.html('<span class="badge"style="background-color:#4ba9fa;">Pending</span>');
            }

            console.log("Status updated!");
                console.log("Updated!");
            },
            error: function () {
                console.log("Error updating task");
            }
        });
    }
    </script>
}

