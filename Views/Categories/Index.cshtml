@model Tasky.VMS.Category.CatListVM

@{
    ViewData["Title"] = "Categories Dashboard";
    Layout = "_NewLayout";
}


<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">Categories</h2>
        <a asp-action="Create" class="btn btn-primary-glow px-4 rounded-pill fw-semibold shadow-sm">
            <i class="bi bi-plus-circle me-2"></i>New Category
        </a>
    </div>
    <form method="get" class="mb-4">
        <div class="row g-3 align-items-center">

            <div class="col-md-4 d-flex align-items-center">
                <label class="me-2 fw-semibold mb-0">Search:</label>
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control rounded-pill px-3 py-2" placeholder="Search categories..." />
            </div>

            <div class="col-md-3 d-flex align-items-center">
                <label class="me-2 fw-semibold mb-0">Sort by Name:</label>
                <select name="sortOrder" class="form-select rounded-pill px-3 py-2">
                    @if (ViewBag.SortOrder == "asc")
                    {
                        <option value="desc">Z → A</option>
                        <option value="asc" selected="selected">A → Z</option>
                    }
                    else
                    {
                        <option value="desc" selected="selected">Z → A</option>
                        <option value="asc">A → Z</option>
                    }
                </select>
            </div>

            <div class="col-md-2 text-end">
                <button type="submit" class="btn btn-primary rounded-pill px-4 py-2">
                    <i class="bi bi-funnel me-1"></i>Filter
                </button>
            </div>
        </div>
    </form>

    <div class="table-responsive shadow-sm rounded-4 overflow-hidden">
        <table class="table align-middle mb-0 table-hover">
            <thead class="table-header">
                <tr>
                    <th style="width: 40px;"></th>
                    <th>Name</th>
                    <th>Description</th>
                    <th class="text-center">Number of Tasks</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.CatsVM != null && Model.CatsVM.Any())
                {
                    foreach (var cat in Model.CatsVM)
                    {
                        var collapseId = $"collapseCat_{cat.Id}";
                        <tr>
                            <td class="text-center">
                                <i class="bi bi-caret-right-fill rotate-icon"
                                   role="button"
                                   data-bs-toggle="collapse"
                                   data-bs-target="#@collapseId"
                                   aria-expanded="false"
                                   aria-controls="@collapseId"></i>
                            </td>
                            <td>@cat.Name</td>
                            <td>@(string.IsNullOrEmpty(cat.Description) ? "-" : cat.Description)</td>
                           
                            @if(cat.TaskCount==0){
                                <td class="text-center"> "Empty" </td>
                            }
                            else{
                                <td class="text-center">
                                    <a 
                                    asp-controller="Tasks"
                                       asp-action="Index"
                                       asp-route-CategoryId="@cat.Id">
                                       @cat.TaskCount.ToString()
                                    </a>
                                </td>
                            }
                            @* string userId, *@
                            @* string? searchTerm = null, *@
                            @* string? sortOrder = "asc", *@
                            @* int pageNumber = 1, *@
                            @* int pageSize = 10 *@
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@cat.Id"
                                   class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('Are you sure you want to delete this category?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>

                        <tr class="collapse bg-light border-bottom" id="@collapseId">
                            <td colspan="5" class="p-3">
                                <div class="rounded-3 border p-3 bg-white shadow-sm">
                                    <strong>Description:</strong>
                                    <p class="text-muted mb-0">@(!string.IsNullOrEmpty(cat.Description) ? cat.Description : "No description provided.")</p>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">No categories found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (Model.TotalCats > Model.PageSize)
    {
        var totalPages = (int)Math.Ceiling((double)Model.TotalCats / Model.PageSize);
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-pageNumber="@i"
                           asp-route-SearchTerm="@Model.SearchTerm"
                           asp-route-SortOrder="@Model.SortOrder">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }

</div>

@section Scripts {
    <script>
        document.querySelectorAll('.rotate-icon').forEach(icon => {
            icon.addEventListener('click', function () {
                const target = document.querySelector(this.dataset.bsTarget);
                this.classList.toggle('rotated');
                const collapseEl = new bootstrap.Collapse(target, { toggle: true });
            });
        });
    </script>
}

<style>
    body {
        background: linear-gradient(135deg, #e9f3ff 0%, #f7fbff 100%);
        min-height: 100vh;
    }

    .btn-primary-glow {
        background: linear-gradient(135deg, #007bff, #4dc0ff);
        color: white;
        border: none;
        box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
        transition: all 0.3s ease;
    }

    .btn-primary-glow:hover {
        box-shadow: 0 6px 20px rgba(0, 123, 255, 0.5);
        transform: translateY(-2px);
    }

    .rotate-icon {
        transition: transform 0.25s ease;
        color: #007bff;
    }

    .rotate-icon.rotated {
        transform: rotate(90deg);
    }

    .table-header {
        background-color: #acd4f7;
        color: #fff;
        border-bottom: 2px solid #007bff;
    }

    .table-header th {
        font-weight: 600;
        letter-spacing: 0.4px;
        border-bottom: none !important;
    }

    .table-hover tbody tr:hover {
        background-color: #f0f8ff;
    }

    .rounded-4 {
        border-radius: 1rem;
    }

    .form-control, .form-select {
        border: 1px solid #d6e4f0;
        transition: border-color 0.2s ease;
    }

    .form-control:focus, .form-select:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.15rem rgba(0, 123, 255, 0.25);
    }

    /* Pagination */
    .page-link {
        color: #007bff;
    }

    .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
    }
</style>
