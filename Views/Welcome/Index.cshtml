@{
    Layout = "_NewLayout";
}

<div class="page-background no-container">
    <div class="welcome">
        <div style="margin-top:100px;">
            <h1 style="font-size:40px;">Welcome to Tasky</h1>
            <ul class="features-list">
                <li><i class="bi bi-check-circle-fill icon"></i> Plan your daily tasks efficiently</li>
                <li><i class="bi bi-calendar-fill icon"></i> Set priorities and deadlines</li>
                <li><i class="bi bi-bar-chart-fill icon"></i> Track your progress and goals</li>
                <li><i class="bi bi-lightbulb-fill icon"></i> Stay organized and motivated</li>
            </ul>
            <div class="buttons">
                <a asp-controller="Account" asp-action="Login" class="btn-link login-btn">Log In</a>
                <a asp-controller="Account" asp-action="Register" class="btn-link register-btn">Register</a>
            </div>
        </div>

    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        overflow-x: hidden;
        font-family: 'Segoe UI', sans-serif;
    }

    .container, .no-container {
        max-width: 100% !important;
        padding: 0 !important;
        margin: 0 !important;
    }

   
    .page-background {
        position: relative;
        width: 100vw;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        background-image: url('/imgs/bg1.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: 80% center; /* shift image right */
        background-color: #f8f9fa;
    }

    .welcome {

        text-align: left;
        width: 450px;
        height:700px;
        color: #333;
        background: rgba(255, 255, 255, 0.92);
        padding: 40px 25px;
        border-radius: 16px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.15);
        margin-left: 5%;
    }

        .welcome h1 {
            font-size: 2rem;
            margin-bottom: 25px;
            color: #2c3e50;
            text-align: center;
        }
    .features-list {
        list-style: none;
        padding: 0;
        margin-bottom: 40px;
        margin-top:50px;
        margin-left:40px;
    }

        .features-list li {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            font-size: 1.1rem;
            color: #555;
        }

        .features-list .icon {
            display: inline-block;
            width: 30px;
            margin-right: 10px;
            font-size: 1.2rem;
            color: #000;
        }

    .buttons {
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .btn-link {
        text-decoration: none; 
        display: inline-block;
        padding: 12px 30px;
        border-radius: 8px;
        font-size: 1rem;
        cursor: pointer;
        color: #fff;
        transition: 0.3s ease;
    }


    .login-btn {
        background-color: #7bb8e0;
    }

        .login-btn:hover {
            background-color: #669fc6;
        }

    .register-btn {
        background-color: #f7a89c; 
    }

        .register-btn:hover {
            background-color: #e68f82;
        }
</style>
